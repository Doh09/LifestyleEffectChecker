<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifestyleEffectChecker.Camera">


    <ScrollView>
        <StackLayout Spacing="10" Padding="10">
            <Button x:Name="TakePicture" Clicked="takePicture" Text="Take a Picture"/>
            <Button x:Name="NextPicture" Clicked="nextPicture" Text="See next Picture"/>
            <Image x:Name="image"/>
            <Label x:Name="lblFileName" Text="" HorizontalOptions="Center"/>


        </StackLayout>
    </ScrollView> 
    
</ContentPage>